<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <application>
        <resource-bundle>
            <base-name>cz.cvut.fel.vyhliluk.tjv.internetbanking.messages.Messages</base-name>
            <var>msgs</var>
        </resource-bundle>
        <locale-config>
            <default-locale>cs</default-locale>
            <supported-locale>cs</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewUpdateInterestRates</from-outcome>
            <to-view-id>/interestRates.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewAllAccounts</from-outcome>
            <to-view-id>/viewAllAccounts.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewUpdateBankCodes</from-outcome>
            <to-view-id>/bankCodes.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewUpdateCurrencyCodes</from-outcome>
            <to-view-id>/currencyCodes.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addDeleteCustomer</from-outcome>
            <to-view-id>/addDeleteCustomer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>updateCustomer</from-outcome>
            <to-view-id>/updateCustomer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewAllCustomers</from-outcome>
            <to-view-id>/viewAllCustomers.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addAccount</from-outcome>
            <to-view-id>/addAccount.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewAllTransactions</from-outcome>
            <to-view-id>/viewAllTransactions.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>custViewAccounts</from-outcome>
            <to-view-id>/customerAccountList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>custTransferMoney</from-outcome>
            <to-view-id>/customerTransferMoney.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>custSendStatement</from-outcome>
            <to-view-id>/customerSendStatement.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>custConvertMoney</from-outcome>
            <to-view-id>/customerConvertMoney.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
